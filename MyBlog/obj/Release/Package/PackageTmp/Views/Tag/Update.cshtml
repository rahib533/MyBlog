
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}


@model CustomProject.Entity.Tag

    <div class="container">
        <div class="card card-register mx-auto mt-5">
            <div class="card-header">Tag'a duzelis et</div>
            <div class="card-body">
                <form method="post" action="/Tag/Update2">
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-12">
                                <div class="form-label-group">
                                    <input name="Adi" value="@Model.Adi" type="text" id="adi" class="form-control" placeholder="Tag Adi" required="required" autofocus="autofocus">
                                    <label for="adi">Tag adı</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-12">
                                <div class="form-label-group">
                                    <input class="form-control btn btn-primary btn-block" type="submit" value="Duzelis Et" />
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                <div class="text-center">
                    <a class="d-block small mt-3" href="/Tag/Index">Geri qayıt</a>
                    <a class="d-block small" href="/Admin/Index">Ana səhifə</a>
                </div>
            </div>
        </div>
    </div>
